@model IEnumerable<Cotrust.Models.Package>

@{
    ViewData["Title"] = "Packages";
}

<div class="text-center mt-2">
    <div class="card-title">Plantillas</div>
</div>

<div class="text-center">
    <center>
        @foreach (var Item in Model)
        {
            <div class="card shadow mb-2 mt-2 w-50">
                <div class="card-body border-bottom border-primary border-2">

                    <div class="input-group ">
                        <a class="card-text me-auto text-decoration-none text-dark bg-transparent" asp-controller="Packages" asp-action="Products" asp-route-id="@Item.Id" onmouseover="namemouseover('ncart @Item.Id')" onmouseout="namemouseout('ncart @Item.Id')">
                            <h5 id="ncart @Item.Id" class="fw-bold">@Item.Name</h5>
                        </a>
                        <a class="card-text text-decoration-none text-dark bg-transparent" asp-controller="Packages" asp-action="Products" asp-route-id="@Item.Id" onmouseover="namemouseover('pcart @Item.Id')" onmouseout="namemouseout('pcart @Item.Id')">
                            <h6 id="pcart @Item.Id" class="fw-bold">Productos: @Item.Products?.Count</h6>
                        </a>                   
                    </div>
                    

                    <div class="input-group mt-1">
                        <a class="text-decoration-none me-auto" asp-controller="Packages" asp-action="DeletePackage" asp-route-id="@Item.Id">
                            <i class="fas fa-trash"></i>
                            Eliminar
                        </a>
                        <a class="text-decoration-none" asp-controller="Packages" asp-action="AddToCart" asp-route-id="@Item.Id">
                            <i class="fas fa-plus-circle"></i>
                            Agregar al carrito
                        </a>                        
                    </div>
                </div>
            </div>
        }
    </center>
</div>
