@model IEnumerable<Cotrust.Models.Package>

@{
    ViewData["Title"] = "Packages";
}

<div class="text-center mt-2">
    <div class="card-title">Plantillas</div>
</div>

<div class="text-center">
    <center>
        @foreach (var Item in Model)
        {
            <div class="card shadow mb-2 mt-2" style="width:500px">
                <div class="card-body border-bottom border-primary border-2">

                    <div class="input-group ">
                        <h5 class="card-text fw-semibold me-auto">@Item.Name</h5>
                        <h5>
                            <a asp-controller="Packages" asp-action="Products" asp-route-id="@Item.Id">
                                Productos: @Item.Products?.Count
                            </a>
                        </h5>                       
                    </div>
                    

                    <div class="input-group mt-1">
                        <a class="btn btn-outline-success me-1" style="width:50px" asp-controller="Packages" asp-action="AddToCart" asp-route-id="@Item.Id">
                            <i class="fas fa-plus-circle"></i>
                        </a>
                        <a class="btn btn-outline-danger ms-1" style="width:50px" asp-controller="Packages" asp-action="DeletePackage" asp-route-id="@Item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </center>
</div>
