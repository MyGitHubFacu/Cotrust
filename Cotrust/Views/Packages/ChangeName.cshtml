@model Cotrust.Models.Package

@{
    ViewData["Title"] = "Packages";
}

<div class="text-center mt-2">
    <div class="card-title">Plantillas</div>
</div>

<center>
    <div class="card shadow mb-5 mt-2 w-100" style="max-width:600px">
        <div class="card-header py-3">
            <div class="row">
                <form asp-action="ChangeName">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group mb-1">
                        <input asp-for="Name" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>

<a asp-action="Products" asp-route-id="@Model.Id" class="btn btn-outline-primary" onmouseover="buttonmouseover('goback')" onmouseout="buttonmouseout('goback')">
    <i class="fas fa-solid fa-arrow-left"></i>
    <span id="goback" class="visually-hidden">Volver</span>
</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

