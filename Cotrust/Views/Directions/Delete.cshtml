@model Cotrust.Models.Direction

@{
    ViewData["Title"] = "Addresses";
}

<div class="text-center mt-2">
    <div class="card-title">Direcciones</div>
</div>

<center>
    <div class="card shadow mb-5 mt-2 w-50">
        <div class="card-header py-3">
            <div class="row">
                <div class="row">
                    <div class="input-group">
                        <div class="fw-semibold me-2">Domicilio:</div>
                        @Html.DisplayFor(model => model.Address)
                    </div>
                    <div class="input-group">
                        <div class="fw-semibold me-2">Ciudad:</div>
                        @Html.DisplayFor(model => model.City)
                    </div>
                    <div class="input-group">
                        <div class="fw-semibold me-2">Región:</div>
                        @Html.DisplayFor(model => model.Region)
                    </div>
                    <div class="input-group">
                        <div class="fw-semibold me-2">País:</div>
                        @Html.DisplayFor(model => model.Country)
                    </div>
                    <div class="input-group">
                        <div class="fw-semibold me-2">Código postal:</div>
                        @Html.DisplayFor(model => model.PostalCode)
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-outline-danger" onmouseover="buttonmouseover('delete')" onmouseout="buttonmouseout('delete')">
                        <i class="fas fa-trash"></i>
                        <span id="delete" class="visually-hidden">Eliminar</span>
                    </button> 
                </form>
            </div>
        </div>
    </div>
</center>

<a asp-action="Index" class="btn btn-outline-primary" onmouseover="buttonmouseover('goback')" onmouseout="buttonmouseout('goback')">
    <i class="fas fa-solid fa-arrow-left"></i>
    <span id="goback" class="visually-hidden">Volver</span>
</a>