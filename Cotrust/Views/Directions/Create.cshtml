@model Cotrust.Models.Direction

@{
    ViewData["Title"] = "Addresses";
}

<div class="text-center mt-2">
    <div class="card-title">Direcciones</div>
</div>

<center>
    <div class="card shadow mb-5 mt-2 w-50">
        <div class="card-header py-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <input asp-for="Address" class="form-control" placeholder="Domicilio" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="City" class="form-control" placeholder="Ciudad" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Region" class="form-control" placeholder="Región" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Country" class="form-control" placeholder="País" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="PostalCode" class="form-control" placeholder="Código postal" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <input type="submit" value="Agregar" class="btn btn-primary mt-2" />
            </form>
        </div>
    </div>
</center>

<div>
    <a asp-action="Index" class="btn btn-outline-primary" onmouseover="buttonmouseover('goback')" onmouseout="buttonmouseout('goback')">
        <i class="fas fa-solid fa-arrow-left"></i>
        <span id="goback" class="visually-hidden">Volver</span>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
