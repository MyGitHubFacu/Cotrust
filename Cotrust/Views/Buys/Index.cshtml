@model IEnumerable<Cotrust.Models.Buys>

@{
    ViewData["Title"] = "Buys";
}

<div class="text-center">
    <center>
        <div class="card shadow mb-5 mt-5 w-100">
            <div class="card-header py-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Dirección
                            </th>
                            <th>
                                Productos
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @item.Direction
                                </td>
                                <td>
                                    @item.Products?.Count()
                                </td>
                                <td>
                                    <a asp-controller="Buys" asp-action="Products" asp-route-id="@item.Id">
                                        <i class="fas fa-info"></i>
                                        Ver productos
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </center>
</div>
