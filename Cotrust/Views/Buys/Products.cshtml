@model IEnumerable<Cotrust.Models.BuysProduct>

@{
    ViewData["Title"] = "Buys";
}

<div class="text-center mt-2">
    <div class="card-title">Productos comprados</div>
</div>

<div class="text-center">
    <center>
        @foreach (var Item in Model)
        {
            <div class="card shadow mb-2 mt-2" style="width:500px">
                <div class="card-body border-bottom border-primary border-2">
                    <div class="d-flex">
                        <!-- Product image-->
                        <img class="card-img ms-0 me-auto" src="data:image/jpg; base64, @Item.Product.Image" alt="..." style="height:100px;width:auto" />
                        <div class="container">
                            <div class="input-group mt-1">
                                <h5 class="card-text me-auto">@Item.Product.Name x @Item.Quantity</h5>
                            </div>
                            <div class="input-group mt-5">
                                <a class="ms-auto" asp-controller="Product" asp-action="Index" asp-route-id="@Item.ProductId">
                                    <h5>
                                        <i class="fas fa-info"></i>
                                        Ver producto
                                    </h5>                                   
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </center>
</div>

<a asp-action="Index" class="btn btn-outline-primary" onmouseover="buttonmouseover('goback')" onmouseout="buttonmouseout('goback')">
    <i class="fas fa-solid fa-arrow-left"></i>
    <span id="goback" class="visually-hidden">Volver</span>
</a>
