@model IEnumerable<Cotrust.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="text-center mt-2">
    <div class="card-title">Productos</div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!--Utilizo la clase input-group-text para alinear los items, le saco el borde y le pongo el mismo background que el body-->
<div class="input-group-text bg-body border-0">
    <div class="card shadow mb-4 me-3 w-25">
        <form asp-action="Index" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">
                <select name="kind" class="form-control bg-white border-0 small" aria-describedby="basic-addon2" asp-items="@ViewBag.Kinds"></select>
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card shadow mb-4 w-auto">
        <a asp-action="Index" class="btn btn-primary">Eliminar filtro</a>
    </div> 
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kind)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    *Look in details*
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kind)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
