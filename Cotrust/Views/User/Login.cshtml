
@{
    ViewData["Title"] = "Log in";
}

<div class="text-center mt-2">
    <div class="card-title">Inicio de sesión</div>
</div>

<div class="text-center">
    <center>
        <div class="card shadow mb-5 mt-2 w-50">
            <div class="card-header py-3">
                <form asp-action="Login">
                    <label class="mt-2">E-mail</label>
                    <input name="email" type="email" class="form-control" required />

                    <label class="mt-2">Contraseña</label>
                    <input name="password" type="password" class="form-control mb-2" required />

                    <input type="submit" value="Ingresar" class="btn btn-primary mb-1 mt-2" />
                </form>

                <a asp-action="Register">Crear una cuenta</a>
            </div>
        </div>
    </center>
</div>
